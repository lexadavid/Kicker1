<h1>Games</h1>
<br>
<br>

<table class="table table-striped">
  <thead>
    <tr>
      <th>#</th>
      <th>Team 1</th>
      <th>Team 2</th>
      <th>Score</th>
      <th>Date</th>
      <th>Detail</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.id %> </td>
        <!-- (&)safe operator: http://dev.mensfeld.pl/2015/11/ruby-2-3-0-changes-and-features/#safe -->
        <td><%= game.player1&.first_name %> &amp; <%= game.player2&.first_name %></td>
        <td><%= game.player3&.first_name %> &amp; <%= game.player4&.first_name %></td>
        <td><%= game.team1_score %> : <%= game.team2_score %></td>
        <td><%= game.updated_at.strftime("%d/%m/%Y") %></td>
        <td><%= link_to "Detail", game_path(game), class: 'action show' %></td>
        <td><%= link_to "Edit", edit_game_path(game), class: 'action edit' %></td>
        <td><%= link_to "Delete", game_path(game), method: :delete, class: 'action delete' %> <br></td>
      </tr>
	  <%end%>
  </tbody>
</table>

<%= link_to("Add New Game", new_game_path, class: 'action new')%>



