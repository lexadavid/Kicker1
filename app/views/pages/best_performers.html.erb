<h1>Best Performers</h1>
<br>
<br>

<table class="table table-striped">
  <thead>
    <tr>
      <th>#</th>
      <th>Name</th>
      <th>Games</th>
      <th>Wins</th>
      <th>Win Ratio</th>
    </tr>
  </thead>

  <tbody>
    <% @players.sort_by {|ratio| ratio.win_ratio }.reverse.each_with_index  do |player, index| %>
      <tr>
        <td><%= index + 1 %> </td>
        <td><%= player.first_name %> </td>
        <td><%= player.games.count %> </td>
        <td><%= player.wins.count %></td>
        <td><%= player.win_ratio %> %</td>
      </tr>
    <% end %>
  </tbody>
</table>

