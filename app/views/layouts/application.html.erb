<!DOCTYPE html>
<html lang="en">

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

<!-- Navigation -->
  <nav class="navbar navbar-default navbar-fixed-top">
      <div class="container">
          <!-- Brand and toggle get grouped for better mobile display -->
          <div class="navbar-header page-scroll">
              <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                  <span class="sr-only">Toggle navigation</span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
              </button>
          </div>

          <!-- Collect the nav links, forms, and other content for toggling -->
          <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
              <ul class="nav navbar-nav navbar-left">
                  <li>
                      <a class="page-scroll" ><%= link_to 'Kicker Dashboard', root_path %></a>
                  </li>
                  <li>
                      <a class="page-scroll" ><%= link_to 'Players', players_path %></a>
                  </li>
                  <li>
                      <a class="page-scroll" ><%= link_to 'Games', games_path %> </li></a>
                  </li>
                  <li>
                      <a class="page-scroll" ><%= link_to 'Best Performers', pages_best_path %></a>
                  </li>
                  <li>
                      <a class="page-scroll" ><%= link_to 'Rules', pages_rules_path %></a>
                  </li>
                  <li>
                      <a class="page-scroll" ><%= link_to 'Feedback', feedbacks_path %></a>
                  </li>
                  <li>
                      <a class="page-scroll" ><%= link_to 'Graph', pages_graph_path %></a>
                  </li>
                  <li>
                      <a class="page-scroll" ><%= link_to 'React', pages_react_path %></a>
                  </li>
              </ul>
          </div>
      </div>
  </nav>

<!-- Body part -->
  <body>
    <!-- Flash message -->
    <% if flash[:notice] %>
      <div class="alert alert-success">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <%= flash[:notice] %>
      </div>
    <% end %>

    <!-- Content -->
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
